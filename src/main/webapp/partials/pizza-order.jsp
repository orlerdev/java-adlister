<form>
	<label for="crust">Choose Your Crust:</label>
	<select id="crust" name="crust">
		<option value="hand">Hand-tossed</option>
		<option value="stuffed">Stuffed-crust</option>
		<option value="thin">Thin</option>
	</select>
	<label for="sauce">Choose Your Sauce:</label>
	<select id="sauce" name="sauce">
		<option value="red">Marinara</option>
		<option value="white">Alfredo</option>
		<option value="buffalo">Buffalo</option>
	</select>
	<label for="size">Choose Your Size:</label>
	<select id="size" name="size">
		<option value="lg">Large (16")</option>
		<option value="med">Medium (12")</option>
		<option value="sm">Personal (6")</option>
	</select>
	<fieldset>
		<legend>Pick Your Toppings</legend>
		<input type="checkbox" id="pepperoni" name="pepperoni" value="pepperoni">
		<label for="pepperoni">Pepperoni</label>
		<input type="checkbox" id="italian-sausage" name="italian-sausage" value="italian-sausage">
		<label for="italian-sausage">Italian Sausage</label>
		<input type="checkbox" id="steak" name="steak" value="steak">
		<label for="steak">Steak</label>
		<input type="checkbox" id="banana-peppers" name="banana-peppers" value="banana-peppers">
		<label for="banana-peppers">Banana Peppers</label>
		<input type="checkbox" id="olives" name="olives" value="olives">
		<label for="olives">Olives</label>
		<input type="checkbox" id="mushrooms" name="mushrooms" value="mushrooms">
		<label for="mushrooms">Mushrooms</label>
		<input type="checkbox" id="onion" name="onion" value="onion">
		<label for="onion">Onion</label>

	</fieldset>
	
</form>